<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeamDescriptionActivity">

    <ImageView
        android:id="@+id/teamLogoBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/teamWinLossText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/SeePlayersButton"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Wyświetl zawodników" />

    <TextView
        android:id="@+id/FavPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Dodaj do ulubionych" />

    <ImageButton
        android:id="@+id/teamFavButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_24"
        android:background="@null"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"/>
</LinearLayout>